{
  "name": "toki-pona",
  "version": "0.0.1",
  "author": "Julien Le Coz",
  "description": "Mobile application to study toki pona",
  "type": "module",
  "scripts": {
    "dev": "VITE_DEBUG=true vite",
    "build": "VITE_DEBUG=true run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "sync": "run-p type-check \"build-only {@}\" -- && npx cap sync android",
    "resources": "capacitor-resources -p android"
  },
  "dependencies": {
    "@capacitor/android": "^7.1.0",
    "@capacitor/core": "^7.1.0",
    "@capacitor/status-bar": "^7.0.1",
    "@vueuse/core": "^12.8.2",
    "capacitor-resources": "^2.0.5",
    "pinia": "^3.0.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.1.0",
    "@tsconfig/node22": "^22.0.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.20.1",
    "eslint-plugin-vue": "^9.32.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.1",
    "typescript": "~5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.2"
  }
}
